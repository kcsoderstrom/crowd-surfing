<form class="filter-criteria">
  <h2>Keyword</h2>
    <input name="user_keyword" id="keyword" type="text">

  <section class="established">
    <h3>Residency Status</h3>
      <ul>
        <li>
          <input type="radio" name="established" value="true" id="established-true" class="established">
          <label for="established-true" class="established">Established</label>
        </li>
        <li>
          <input type="radio" name="established" value="false" id="established-false" class="established">
          <label for="established-false" class="established">New in town</label>
        </li>
      </ul>
  </section>

  <section class="gender">
    <h3>Gender</h3>
      <ul>
        <li>
          <input type="radio" name="gender" value="female" id="gender-female" class="gender">
          <label for="gender-female" class="gender">Female</label>
        </li>
        <li>
          <input type="radio" name="gender" value="male" id="gender-male" class="gender">
          <label for="gender-male" class="gender">Male</label>
        </li>
        <li>
          <input type="radio" name="gender" value="male" id="gender-other" class="gender">
          <label for="gender-other" class="gender">Other</label>
        </li>
      </ul>
  </section>

  <section class="age">
    <h2>Age</h2>
      <input type="text" id="age-lower" name="age_lower" class="user-age">

      <label for="age-upper">to</label>
      <input type = "text" id="age-upper" name="age_upper" class="user-age">
  </section>

  <h2>Location</h2>
    <input name="user_location" id="user_location" type="text">

</form>

<h3>Sort</h3>
<form class="sort-criterion">
    <ul>
      <li>
        <input type="radio" name="sort-criterion" value="last-login" id="sort-last-login">
        <label for="sort-last-login">Last login</label>
      </li>

      <li>
        <input type="radio" name="sort-criterion" value="proximity" id="sort-proximity">
        <label for="sort-proximity">Proximity</label>
      </li>
    </ul>
</form>

<form class="search">
  <h2>Search by name</h2>
  <input type="text" id="user-name" name="user[match]">
</form>
