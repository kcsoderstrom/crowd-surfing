<form class="sort-criterion">
  <h1>Sort by</h1>
    <div class="sort">
      <input type="radio" name="sort-criterion" value="last-login" id="sort-last-login">
      <label for="sort-last-login">Last login</label>
    </div>

    <div class="sort">
      <input type="radio" name="sort-criterion" value="proximity" id="sort-proximity">
      <label for="sort-proximity">Proximity</label>
    </div>
</form>

<form class="filter-criteria">
  <h1>Filter by</h1>

  <section class="age">
    <h2>Age</h2>
      <div class="age">
        <input id="age-lower" name="age_lower" class="user-age">
      </div>

      <div class="age">
        <label for="age-upper">to</label>
        <input id="age-upper" name="age_upper" class="user-age">
      </div>
  </section>

  <section class="gender">
    <h2>Gender</h2>
      <div class="gender">
        <input type="radio" name="gender" value="female" id="gender-female" class="gender">
        <label for="gender-female" class="gender">Female</label>
      </div>
      <div class="gender">
        <input type="radio" name="gender" value="male" id="gender-male" class="gender">
        <label for="gender-male" class="gender">Male</label>
      </div>
      <div class="gender">
        <input type="radio" name="gender" value="male" id="gender-other" class="gender">
        <label for="gender-other" class="gender">Other</label>
      </div>
  </section>

  <h2>Keyword</h2>
    <input name="keyword" id="keyword">

</form>
