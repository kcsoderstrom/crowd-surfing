<form class="edit-profile">
  <label for="user-profile">About</label>
  <textarea name="user[profile][about]"
            id="user-profile"
            class="profile"><%= model.profile().escape("about") %></textarea>

  <h2>Gender</h2>
    <input type="radio"
           name="user[profile][gender]"
           value="female"
           id="gender-female"
           <%= model.profile().escape("gender") === "female" ? "checked" : "" %>>
    <label for="gender-female">Female</label>
    <input type="radio"
           name="user[profile][gender]"
           value="male"
           id="gender-male"
          <%= model.profile().escape("gender") === "male" ? "checked" : "" %>>
    <label for="gender-male">Male</label>
    <input type="radio"
           name="user[profile][gender]"
           value="other"
           id="gender-other"
          <%= model.profile().escape("gender") === "other" ? "checked" : "" %>>
    <label for="gender-other">Other</label>

  <label for="user-age">Age</label>
  <input id="user-age" name="user[profile][age]" value="<%= model.profile().escape("age") %>">

  <label for="user-location">Location</label>
  <input id="user-location" name="user[profile][location]" value="<%= model.profile().escape("location") %>">

  <label for="photo">Upload photo</label>
  <input id="photo" type="file" class="my-photo-upload">

  <button type="submit">Update Profile</button>
</form>
