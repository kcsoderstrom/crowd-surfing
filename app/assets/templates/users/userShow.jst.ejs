<section class="profile-subheader">
  <h1><%= model.profile().escape("name") %></h1>
  <% if(model.profile().escape("location")) {%>
    <%= model.profile().escape("location") %>
  <% } else { %>
    No location given.
  <% } %>
</section>

<section class="left-side">
  <a id="req-send" class="request-button" href="#/requests/new">Send request</a>
  <ul class="nav">
    <li><a id="msg-send" href="#/messages/new">
      Send message
    </a></li>

    <li>
      <% if(!model.isContact) { %>
        <a id="add-contact" href="#">
          Add contact
        </a>
      <% } else { %>
        Already in contacts
      <% } %>
    </li>
  </ul>
  <img class="full-photo" src="<%= model.escape("big_photo_url") %>">

</section>

<section class="right-side">
  <h2>About</h2>
  <ul>
    <li><%= model.profile().escape("about") %></li>
    <li>Gender: <%= model.profile().escape("gender") %></li>
    <li>Age: <%= model.profile().escape("age") %></li>
  </ul>
</section>

<section class="wax-paper"></section>

<div class="new-request-modal"></div>
