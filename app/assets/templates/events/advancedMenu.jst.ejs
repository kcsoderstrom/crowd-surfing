<form class="filter-criteria">

  <h2>Keyword</h2>
    <input name="event_keyword" id="event_keyword">

  <h2>Location</h2>
    <input name="event_location" id="event_location">

  <section class="date">
    <h2>Date</h2>
      <div class="date">
        <input id="date-lower" name="date_lower" class="event-date" type="date">
      </div>

      <div class="date">
        <label for="date-upper">to</label>
        <input id="date-upper" name="date_upper" class="event-date" type="date">
      </div>
  </section>

  <section class="time">
    <h2>Time</h2>
      <input id="time-lower" name="time_lower" class="event-time" type="time">

      <label for="time-upper">to</label>
      <input id="time-upper" name="time_upper" class="event-time" type="time">
  </section>

</form>

<h2>Sort</h2>
<form class="sort-criterion">
    <ul>
      <li>
        <input type="radio" name="sort-criterion" value="alphabetical" id="sort-alphabetical">
        <label for="sort-alphabetical">Title</label>
      </li>
      <li>
        <input type="radio" name="sort-criterion" value="date" id="sort-date">
        <label for="sort-date">Date</label>
      </li>
      <li>
        <input type="radio" name="sort-criterion" value="proximity" id="sort-proximity">
        <label for="sort-proximity">Proximity</label>
      </li>
    </ul>
</form>

<form class="search">
  <label for="event-title">Search by title</label>
  <input id="event-title" name="event[match]">
</form>
